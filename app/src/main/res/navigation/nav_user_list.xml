<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_user_list"
    app:startDestination="@id/userListFragment">

    <fragment
        android:id="@+id/userListFragment"
        android:name="com.thikar.githubusers.ui.UserListFragment"
        android:label="Github Users">
        <action
            android:id="@+id/action_userListFragment_to_followersListFragment"
            app:destination="@id/followersListFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/followersListFragment"
        android:name="com.thikar.githubusers.ui.FollowersListFragment"
        android:label="Followers" />
</navigation>